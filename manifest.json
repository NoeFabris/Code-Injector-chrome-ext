{
    "manifest_version": 3,
    "name": "Code Injector",
    "version": "1.0",
    "description": "Inject HTML, JS and CSS from a local server into specified web pages",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs",
        "notifications"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}